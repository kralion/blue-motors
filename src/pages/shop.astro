const productos = [productData.detallesMotocicleta];
---

<Layout title="Bluemotors - Inicio">
  <div class="flex flex-col lg:flex-row justify-center gap-20">
    <div>
      <div class="my-[20px]">
        <p class="font-medium mb-[10px] text-white">TOP RATED PRODUCTS</p>
        <div class="h-[2px] w-[20%] rounded-xl bg-red-dark"></div>
      </div>
      <div>
        {
          productos.map((item, index) => (
            <ProductCard 
              details={item.modelo}
              price={10000}
              image={item.fotos[0].image1}
              alt={item.modelo}
              id={index + 1}
              stars={3}
            />
          ))
        }
      </div>
    </div>

    <div>
      <div class="my-[20px]">
        <p class="font-medium mb-[10px] text-white">SALE PRODUCTS</p>
        <div class="h-[2px] w-[20%] rounded-xl bg-red-dark"></div>
      </div>
      {
        productos.map((item, index) => (
            <ProductCard 
              details={item.modelo}
              price={10000}
              image={item.fotos[0].image1}
              alt={item.modelo}
              id={index + 1}
              stars={3}
            />
          ))
      }
    </div>
  </div>
</Layout>
