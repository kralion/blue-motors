---
import data from "../data/data.json";
---

<div class="container mx-auto px-4 py-8">
  <div class="flex flex-col space-y-4">
    <h2 class="text-xl font-bold">Informaci√≥n de Contacto</h2>
    <hr class="border-gray-700" />

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div class="flex flex-col">
        <label for="name" class="text-sm font-medium mb-1">Nombres</label>
        <input
          type="text"
          id="name"
          class="shadow-sm -md px-3 py-2 focus:outline-none focus:ring-red-dark focus:border-red-dark block w-full"
          required
        />
      </div>
      <div class="flex flex-col">
        <label for="last-name" class="text-sm font-medium mb-1">Apellidos</label
        >
        <input
          type="text"
          id="last-name"
          class="shadow-sm -md px-3 py-2 focus:outline-none focus:ring-red-dark focus:border-red-dark block w-full"
          required
        />
      </div>
    </div>
    <div class="flex flex-col">
      <label for="email" class="text-sm font-medium mb-1">Email </label>
      <input
        type="email"
        id="email"
        class="shadow-sm -md px-3 py-2 focus:outline-none focus:ring-red-dark focus:border-red-dark sblock w-full"
        required
      />
    </div>
    <div class="flex flex-col">
      <label for="phone" class="text-sm font-medium mb-1"
        >Numero de telefono (Opcional)</label
      >
      <input
        type="tel"
        id="phone"
        class="shadow-sm -md px-3 py-2 focus:outline-none focus:ring-red-dark focus:border-red-dark block w-full"
      />
    </div>
    <div class="flex flex-col">
      <label for="message" class="text-sm font-medium mb-1">Mensaje</label>
      <textarea
        id="message"
        rows="4"
        class="shadow-sm -md px-3 py-2 focus:outline-none focus:ring-red-dark focus:border-red-dark block w-full"
      ></textarea>
    </div>
    <button
      type="submit"
      class="w-full flex justify-center items-center px-4 py-2 text-base font-medium text-white bg-red-dark -md hover:opacity-70 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-dark"
      >Enviar Mensaje</button
    >
  </div>
</div>
