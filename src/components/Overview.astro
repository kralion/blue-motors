---
import rightArrow from "../assets/right.svg";
const { description, features } = Astro.props;
const featureList = features.split(",");
---

<div class="space-y-5">
  <h1 class="text-xl font-bold">Un vistazo general</h1>
  <hr class="border-gray-700" />
  <p class="text-xs">{description}</p>
  <hr class="border-gray-800" />
  <h1 class="text-xl font-bold">Caracter√≠sticas</h1>
  <hr class="border-gray-700" />
  <div class="grid lg:grid-cols-3 grid-cols-2 gap-4">
    {
      featureList.map((feature) => (
        <div class="flex items-center gap-2">
          <img src={rightArrow.src} alt="icon" width="15" height="15" />
          <span class="text-sm">{feature}</span>
        </div>
      ))
    }
  </div>
</div>
